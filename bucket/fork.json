{
    "version": "1.37.2",
    "description": "A fast and friendly git client for Mac and Windows",
    "homepage": "https://git-fork.com/",
    "license": "https://git-fork.com/license",
    "url": "http://fork.dev/update/win/Fork-1.37.2-full.nupkg#/dl.7z",
    "hash": "sha1:abaa753d9cbeeeb157ec9ba7b5865bf7a2979986",
    "installer": {
        "script": [
            "$versionPattern = \"([\\d]+\\.)+[\\d]\"",
            "$gitZipPattern = [regex]::escape(\"PortableGit-\") + \"$versionPattern\" + [regex]::escape(\"-64-bit.7z\")",
            "$zips = Get-ChildItem \"$dir\\lib\\net45\" *.7z",
            "$gitZip = $zips -match $gitZipPattern | Foreach {$matches[0]}",
            "$gitVersion = $gitZip -match $versionPattern | Foreach {$matches[0]}",
            "Expand-7zipArchive \"$dir\\lib\\net45\\$gitZip\" \"$env:LOCALAPPDATA\\fork\\gitInstance\\$gitVersion\"",
            "\"$env:LOCALAPPDATA\\fork\\gitInstance\\post-install.bat\" | out-null",
            "Move-Item \"$dir\\lib\\net45\\Fork_ExecutionStub.exe\" \"$dir\\Fork.exe\" -Force",
            "New-Item \"$dir\" -Name \"app-$version\" -ItemType 'directory' -Force | out-null",
            "Move-Item \"$dir\\lib\\net45\\*.*\" \"$dir\\app-$version\"",
            "Remove-Item -LiteralPath \"$dir\\lib\", \"$dir\\_rels\", \"$dir\\package\", \"$dir\\[Content_Types].xml\", \"$dir\\fork.nuspec\", `",
            "\"$dir\\app-$version\\7z.exe\", \"$dir\\app-$version\\7z.dll\", \"$dir\\app-$version\\$gitZip\" -Force -Recurse"
        ]
    },
    "uninstaller": {
        "script": [
            "if(Test-Path \"$env:LOCALAPPDATA\\fork\\gitInstance\") {",
            "    Remove-Item -LiteralPath \"$env:LOCALAPPDATA\\fork\\gitInstance\" -Force -Recurse",
            "}"
        ]
    },
    "bin": "Fork.exe",
    "shortcuts": [
        [
            "Fork.exe",
            "Fork"
        ]
    ],
    "checkver": {
        "url": "http://fork.dev/update/win/RELEASES",
        "regex": "Fork-([\\d.]+)-full.nupkg",
        "reverse": true
    },
    "autoupdate": {
        "url": "http://fork.dev/update/win/Fork-$version-full.nupkg#/dl.7z",
        "hash": {
            "url": "$baseurl/RELEASES"
        }
    }
}
